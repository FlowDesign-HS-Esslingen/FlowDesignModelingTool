<UserControl x:Class="FlowDesign.UI.Controls.Seperator.InsetSeperator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FlowDesign.UI.Controls.Seperator"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="control"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <StackPanel>
        <Rectangle Height="{Binding ElementName=control,
                                    Path=DarkPartHeight}"
                   Margin="{Binding ElementName=control,
                                    Path=Margin}"
                   VerticalAlignment="Center"
                   Fill="{Binding ElementName=control,
                                  Path=DarkPartBackground}" />
        <Rectangle Height="{Binding ElementName=control,
                                    Path=LightPartHeight}"
                   Margin="{Binding ElementName=control,
                                    Path=Margin}"
                   VerticalAlignment="Bottom"
                   Fill="{Binding ElementName=control,
                                  Path=LightPartBackground}" />
    </StackPanel>
</UserControl>
